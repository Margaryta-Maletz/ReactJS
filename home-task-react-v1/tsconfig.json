{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es6",
    "lib": [
      "es2017",
      "dom"
    ],
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
